### File chooser components ###

<MyFileChooserBox@BoxLayout>
    orientation: "horizontal"
    pos_hint:{'y': 0.5}

<MyFileChooserGrid@GridLayout>
    cols: 2
    spacing: 20
    pos_hint:{'x': 0, 'y': 0.5}
    size_hint_y: None
    height:50

<MyFileChooserLabel@Label>
    font_size: 32
    bold: True
    size_hint: None, None
    size: self.texture_size
    halign:'left'

<MyFileChooserExmp@Label>
    font_size: 20
    color: (0,0,0)
    size_hint: None, None
    size: self.texture_size


<MyFileChooser@FileChooserListView>
    id: mainFileChooser
    spacing: 20
    rootpath: Factory.SettingsWindow().currentDefaultPath
    canvas.before:
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            size: self.size

<fileChooserButton@Button>
    text: "choose"
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#ff0083')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25]
    font_size: 24
    size_hint_y: None
    height:50
    size_hint_x: None
    width:100
    pos_hint: {'center_y': 0.5}
    spacing: 20

