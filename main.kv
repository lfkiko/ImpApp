<HeaderLabel@Label>
    font_size: 45
    bold: True
    color: (0,0,0)
    size_hint: None, None
    size: self.texture_size
    halign:'left'










<UserInputBox@BoxLayout>
    orientation: "horizontal"
    spacing:10

<UserInputLabel@Label>
    font_size: 20
    bold: True
    focus: True
    color: (0,0,0)
    size_hint_x: None
    width: 200
    pos_hint: {'center_y': 0.5}

<UserInput@TextInput>
    font_size: 20
    multiline: False
    pos_hint: {'center_y': 0.5}
    valign: 'bottom'

<MySpinner@Spinner>
    font_size: 20
    values_font_size:20
    pos_hint:{'center_y': 0.5}
    size_hint_y: None
    height:60
    size_hint_x: None
    width:200
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#ff0083')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25]

<MyCheckBox@CheckBox>
    canvas:
        Clear:
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            source: self._checkbox_image
            size: sp(32), sp(32)
            pos: int(self.center_x - sp(16)), int(self.center_y - sp(16))