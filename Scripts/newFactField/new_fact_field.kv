#:import utils kivy.utils
<newFieldToFactWindow>

    fact:fact
    field:field
    description:description
    type:type

    name: "newFieldToFact"
    BoxLayout:
        padding: 10
        spacing: 20
        orientation: "vertical"
        size: root.width, root.height
        HeaderLabel:
            text: "New Field To Fact"

        MyFileChooserBox:
            MyFileChooserGrid:
                MyFileChooserLabel:
                    text: "Solution path:"

                MyFileChooserExmp:
                    id: solutionPath
                    text: "C:\\GIT\\solution\\biz-units\\perso-biz\\Projects\\solution"

            fileChooserButton:
                spacing: 20
                on_release: Factory.MenuWindow().selected(root,"s")

        GridLayout:
            cols:2
            UserInputBox:
                UserInputLabel:
                    text: "Fact to modify"
                UserInput:
                    id: fact

            UserInputBox:
                UserInputLabel:
                    text: "New field"
                UserInput:
                    id: field

            UserInputBox:
                UserInputLabel:
                    text: "Description"
                UserInput:
                    id: description

            UserInputBox
                UserInputLabel:
                    text: "Type"
                UserInput:
                    id: type

        tailBoxLayout:
            RoundedButton:
                text: "Back"
                pos_hint: {'center_x': 0.5}
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

            RoundedButton:
                text: "Help"
                pos_hint: {'center_x': 0.5}
                on_release: Factory.MenuWindow().openKB(root)

            RoundedButton:
                text: "Run"
                pos_hint: {'center_x': 0.5}
                on_release: root.runFunc(solutionPath.text)