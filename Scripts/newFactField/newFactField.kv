#:import utils kivy.utils
<newFieldToFactWindow>

    fact:fact
    field:field
    description:description
    type:type

    name: "newFieldToFact"
    BoxLayout:
        padding: 10
        spacing: 20
        orientation: "vertical"
        size: root.width, root.height
        HeaderLabel:
            text: "New Field To Fact"

        GridLayout:
            cols:2
            UserInputBox:
                UserInputLabel:
                    text: "Fact name"
                UserInput:
                    id: fact

            UserInputBox:
                UserInputLabel:
                    text: "Field's name"
                UserInput:
                    id: field

            UserInputBox:
                UserInputLabel:
                    text: "value"
                UserInput:
                    id: value

            UserInputBox
                UserInputLabel:
                    text: "Type"
                UserInput:
                    id: type

        tailBoxLayout:
            RoundedButton:
                text: "Back"
                pos_hint: {'center_x': 0.5}
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

            RoundedButton:
                text: "Help"
                pos_hint: {'center_x': 0.5}
                on_release: Factory.MenuWindow().openKB(root)

            RoundedButton:
                text: "Run"
                pos_hint: {'center_x': 0.5}
                on_release: root.runFunc(solutionPath.text)