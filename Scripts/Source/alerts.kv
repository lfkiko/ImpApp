#:import utils kivy.utils
#:import Factory kivy.factory.Factory
<ERROR1@Popup>
    auto_dismiss: False
    size_hint: (0.6,0.2)
    title: "ERROR!"
    bold: True

    BoxLayout:
        orientation: "vertical"
        spacing: 20

        Label:
            text: "Soluotion path is not valid"
            font_size: 24
            bold: True
            size_hint: None, None
            size: self.texture_size

        Button:
            text: "Close"
            font_size: 20
            size_hint_y: None
            height:30
            size_hint_x: None
            width:60
            halign: 'right'
            pos_hint:{'center_x':0.95}
            background_color: (0,0,0,0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#ff0083')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]
            on_release: root.dismiss()


