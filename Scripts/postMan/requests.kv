#:import utils kivy.utils

<RequestsWindow>
    name: "Requests"
    BoxLayout:
        padding: 10
        spacing: 20
        orientation: "vertical"
        size: root.width, root.height

        HeaderLabel:
            text: "Post-man requests"

        GridLayout:
            cols: 3
            padding:10
            spacing: 20
            size: root.width, root.height

            Button:
                text: "getInsights"
                on_release: root.runFunc('getInsights')

            Button:
                text: "generateInsights"
                on_release: root.runFunc('generateInsights')

            Button:
                text: "getInsightDetails"
                on_release: root.runFunc('getInsightDetails')

            Button:
                text: "executeFreeToUse"
                on_release: root.runFunc('executeFreeToUse')
            Button:
                text: "executeCrossAccountActivity"
                on_release: root.runFunc('executeCrossAccountActivity')
            Button:
                text: "executeUserProfile"
                on_release: root.runFunc('executeUserProfile')
            Button:
                text: "getEligibilityProfiles"
                on_release: root.runFunc('getEligibilityProfiles')

    #menu
        tailBoxLayout:
            RoundedButton:
                text: "Back"
                on_release:
                    app.root.current = "PostMan"
                    root.manager.transition.direction = "right"

            RoundedButton:
                text: "Help"
                on_release: Factory.MenuWindow().openKB(root)
