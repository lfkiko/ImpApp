#:import utils kivy.utils

<PostManWindow>
    name: "PostMan"
    BoxLayout:
        padding: 10
        spacing: 20
        orientation: "vertical"
        size: root.width, root.height

        HeaderLabel:
            text: "Post-man"


        GridLayout:
            cols: 2
            pos_hint:{'center_y': 0.5}
            padding:20

            UserInputBox:
                UserInputLabel:
                    text: "IP"
                UserInput:
                    id: ipAddress

            UserInputBox:
                UserInputLabel:
                    text: "Channel"
                UserInput:
                    id: channel

            UserInputBox:
                UserInputLabel:
                    text: "Context"
                UserInput:
                    id: context

            UserInputBox:
                UserInputLabel:
                    text: "User Id"
                UserInput:
                    id: user

        GridLayout:
            id: checkBoxs
            text: ""
            cols: 2
            UserInputBox:
                MyCheckBox:
                    id: defaultJan
                    group: 'dates'
                    on_release: root.checkBoxDate('01/03/2017')
                UserInputLabel:
                    text: "01/03/2017"


            UserInputBox:
                MyCheckBox:
                    id: defaultDec
                    group: 'dates'
                    on_release: root.checkBoxDate('12/22/2016')
                UserInputLabel:
                    text: "12/22/2016"


            UserInputBox:
                MyCheckBox:
                    id: otherDate
                    group: 'dates'
                    on_release: root.checkBoxDate(date.text)
                UserInputLabel:
                    text: "Other date:"

            UserInputBox:
                UserInput:
                    id: date
                    disabled: True
                fileChooserButton:
                    text: "Submit"
                    spacing: 20
                    on_press: root.submit(date.text)



    #menu
        tailBoxLayout:
            RoundedButton:
                text: "Back"
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

            RoundedButton:
                text: "Help"
                on_release: Factory.MenuWindow().openKB(root)

            RoundedButton:
                text: "Next"
                on_release:
                    root.checkDate(checkBoxs.text)
                    root.requestProperties()
                    app.root.current = "Requests"
                    root.manager.transition.direction = "left"