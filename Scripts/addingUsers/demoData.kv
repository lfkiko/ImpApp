#:import utils kivy.utils

<demoDataWindow>
    name: "demoData"
    BoxLayout:
        padding: 10
        spacing: 20
        orientation: "vertical"
        size: root.width, root.height

        HeaderLabel:
            text: "Demo data"

        # core path
        MyFileChooserBox
            MyFileChooserGrid:
                MyFileChooserLabel:
                    text: "Core path:"
                MyFileChooserExmp:
                    id: corePath
                    text: "C:\\GIT\\perso-core"

            fileChooserButton:
                spacing: 20
                on_release: Factory.MenuWindow().selected(root,"c")


        #Solution path
        MyFileChooserBox:
            MyFileChooserGrid:
                MyFileChooserLabel:
                    text: "Solution path:"

                MyFileChooserExmp:
                    id: solutionPath
                    text: "C:\\GIT\\solution\\biz-units\\perso-biz\\Projects\\solution$QA"

            fileChooserButton:
                spacing: 20
                on_release: Factory.MenuWindow().selected(root,"s")

        GridLayout:
            cols: 2
            pos_hint:{'center_y': 0.5}
            padding:20

            UserInputBox:
                UserInputLabel:
                    text: "Local currency:"
                UserInput:
                    text: "USD"
                    id: LocalCurrency

            UserInputBox:
                UserInputLabel:
                    text: "Foreign currency:"
                UserInput:
                    text: "EUR"
                    id: ForeignCurrency

            UserInputBox:
                UserInputLabel:
                    text: "Country name:"
                UserInput:
                    text: "UNITED STATES"
                    id: CountryName

            UserInputBox:
                UserInputLabel:
                    text: "Country code:"
                UserInput:
                    text: "USA"
                    id: CountryCode

        GridLayout:
            id: checkBoxs
            text: ""
            cols: 3
            UserInputBox:
                UserInputLabel:
                    text: "B_users:"
                MyCheckBox:
                    id: BUsers


            UserInputBox:
                UserInputLabel:
                    text: "modified:"
                MyCheckBox:
                    active:
                    id: modified

            openFileButton:
                id: modFile
                disabled: not(modified.active)
                on_release: Factory.MenuWindow().openFile(root.name)


        #menu
        tailBoxLayout:
            RoundedButton:
                text: "Back"
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

            RoundedButton:
                text: "Help"
                on_release: Factory.MenuWindow().openKB(root)

            RoundedButton:
                text: "Run"
                on_release: root.runFunc()