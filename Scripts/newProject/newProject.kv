#:import utils kivy.utils
#:import Factory kivy.factory.Factory
<newProjectWindow>
    name: "newProject"
    BoxLayout:
        padding: 10
        spacing: 20
        orientation: "vertical"
        size: root.width, root.height
        pos_hint:{'center_y': 0.5}

        HeaderLabel:
            text: "New project configuration"


        GridLayout:
            cols: 2
            padding:20

            UserInputBox:
                UserInputLabel:
                    text: "Add/update properties"
                MyCheckBox:
                    id: properties
                    on_active: root.checkBoxClick('properties')

            UserInputBox:
                UserInputLabel:
                    text: "update configurations"
                MyCheckBox:
                    id: configurations
                    on_active: root.checkBoxClick('configurations')

            UserInputBox:
                UserInputLabel:
                    text: "Channels name: "
                UserInput:
                    id: channel

        #menu
        tailBoxLayout:
            RoundedButton:
                text: "Back"
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

            RoundedButton:
                text: "Help"
                on_release: Factory.MenuWindow().openKB(root)


            RoundedButton:
                text: "Run"
                pos_hint: {'center_x': 0.5}
                on_release: root.runFunc()
