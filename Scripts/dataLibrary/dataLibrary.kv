<dataLibraryWindow>

    name: "dataLibrary"

    BoxLayout:
        padding: 10
        spacing: 20
        orientation: "vertical"
        size: root.width, root.height
        HeaderLabel:
            text: "Data library update"

        BoxLayout:
            orientation: "vertical"
            DataLibBox:
                DataLibLabel:
                    text: "Update data library --> "
                MyCheckBox:
                    id: dataLibrary

            DataLibBox:
                DataLibLabel:
                    text: "Edit the file --> "
                openFileButton:
                    on_release: Factory.MenuWindow().openFile(root.name)

            DataLibBox
                DataLibLabel:
                    text: "Remove deactivated attributes --> "
                MyCheckBox:
                    id: deactivated


        tailBoxLayout:
            RoundedButton:
                text: "Back"
                pos_hint: {'center_x': 0.5}
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

            RoundedButton:
                text: "Help"
                pos_hint: {'center_x': 0.5}
                on_release: root.openKB()

            RoundedButton:
                text: "Run"
                pos_hint: {'center_x': 0.5}
                on_release: root.runFunc(root.name)

<DataLibLabel@Label>
    font_size: 32
    color: (0,0,0,1)
    bold: True
    size_hint: None, None
    size: self.texture_size
    pos_hint:{'center_y': 0.5}

<DataLibBox@BoxLayout>
    orientation: "horizontal"
    spacing:10
    padding: 10